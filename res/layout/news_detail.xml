<LinearLayout 
    android:layout_width="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
 <RelativeLayout  
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:orientation="horizontal">
        <Button
            android:id="@+id/detailbutton"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="新 闻 详 情"
            android:textSize="8pt"
            android:textColor="@android:color/white"
            android:background="@drawable/news_detail_tbar"
            />
        <ImageButton
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:paddingLeft="10dip"
            android:paddingTop="2dip"           
          	android:id="@+id/return_Subject"
            android:src="@drawable/test_footer_home"  
            android:background="@drawable/news_detail_tbar"             
            />
          </RelativeLayout>
<ScrollView 
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="#d3d3d3"
    >
 <RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="15dip" >
<LinearLayout 
    android:id="@+id/newsdetail_tbar"
    android:layout_width="fill_parent" android:layout_height="wrap_content" 
    android:orientation="vertical" android:background="#d3d3d3"
    >
    <LinearLayout 
       android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:layout_marginTop="20dip"
        android:orientation="vertical" >
         <ImageView 
           android:layout_width="60dip"
           android:layout_height="20dip"
           android:background="#aa0000" />
        <ImageView 
           android:layout_width="fill_parent"
           android:layout_height="6dip"
           android:background="#aa0000" />
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/detailtitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:orientation="vertical"
        android:background="@android:color/white"
        >
       
        <TextView 
            android:id="@+id/title_1"
            android:layout_width="fill_parent"
          	android:text="新闻标题"
            android:layout_height="wrap_content"
            android:textColor="#44c4e0"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="10dip"
             />
        <TextView 
            android:id="@+id/title_2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            android:layout_marginTop="12dip"
            android:layout_marginBottom="10dip"
            />
        
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
         android:layout_marginLeft="8dip"
         android:layout_marginRight="8dip"
        android:background="@android:color/white"
        android:orientation="vertical"
         >
        <TextView
            android:id="@+id/detail_1"
            android:layout_width="fill_parent"
            android:text="新闻内容"
             android:layout_marginTop="10dip"
            android:layout_marginLeft="10dip"
            android:layout_height="wrap_content"
            android:textColor="#44c4e0"
            />
        <TextView 
            android:id="@+id/detail_2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textColor="#000000"
           	android:layout_marginLeft="25dip"
           	android:layout_marginTop="12dip"
           	android:layout_marginRight="25dip"
           	android:layout_marginBottom="10dip"
           	android:lineSpacingExtra="12dp"
            />
    </LinearLayout>
   </LinearLayout>
      <LinearLayout 
    android:id="@+id/tbar_3"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:paddingTop="10dip"

     >

    <RelativeLayout
        android:id="@+id/xlistview_footer_content2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="100dip" >

        <ProgressBar       
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="visible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
            android:layout_marginTop="20dip"
            android:layout_centerInParent="true"
            android:text="@string/xlistview_header_hint_loading" />
    </RelativeLayout>

</LinearLayout>
</RelativeLayout>
</ScrollView>
</LinearLayout>