<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    >
    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
        <!-- header -->
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="44dip"
            android:orientation="horizontal"
            android:background="@drawable/new_selectot_whole_top_bg"
            >
            <ToggleButton
                android:id="@+id/toggle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@drawable/new_selector_news_header"
                android:button="@null"
                android:checked="true"
                android:textOff=""
                android:textOn="" />
            <TextView   
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新闻"
                android:gravity="center_horizontal"
                android:textColor="#ffffff"
                android:textSize="19dip"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
		<!-- content -->
		<LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:padding="3dip"
		    android:orientation="horizontal"
		    android:background="@drawable/new_selector_whole_bg"
		    >
            <!-- 左边 -->
            <LinearLayout 
                android:id="@+id/left"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:background="@null"
                >
                <RadioGroup 
                    android:id="@+id/group"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:paddingLeft="3dip"
                    android:background="@null"
                    >
                    <RadioButton 
                        android:id="@+id/radio1"
                        android:checked="true"
                        android:padding="5dip"
                        android:textSize="15sp"
                        android:button="@null"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:layout_marginTop="15dip"
                        android:clickable="true"
                        android:weightSum="1"
                        android:textColor="@drawable/new_selector_txtcolor"
                        android:background="@drawable/new_selector_news_1"
                        android:text="图书馆新闻"
                        />
                    <RadioButton android:id="@+id/radio2"
						android:layout_marginTop="10dip" 
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						 android:padding="5dip"
						android:text="学校新闻"
						 android:textSize="15sp"
						android:textColor="@drawable/new_selector_txtcolor"
						android:background="@drawable/new_selector_news_2"
						android:clickable="true"
						android:button="@null"
						 />
					<RadioButton android:id="@+id/radio3"
					    android:visibility="gone"
						android:layout_marginTop="10dip" 
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						 android:padding="5dip"
						android:text="社会新闻" 
						android:textSize="15sp"
						android:textColor="@drawable/new_selector_txtcolor"
						android:background="@drawable/new_selector_news_3"
						android:clickable="true" 
						android:button="@null"
						/>
                </RadioGroup>
            </LinearLayout>
		    <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/new_selector_news_contentbg"
             >
			</FrameLayout>
		<!-- 必须得有，但是不使用 -->
		  <TabWidget 
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
       		 </TabWidget>
		</LinearLayout>
       
    </LinearLayout>
</TabHost>