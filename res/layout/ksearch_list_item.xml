	android:layout_height="fill_parent" android:background="#ffffff"
	android:gravity="center">
	<ImageView android:id="@+id/img" android:layout_width="44dip"
		android:layout_height="wrap_content" android:src="@drawable/cnki"
		android:scaleType="fitXY" android:padding="5dip" />
	<TextView android:id="@+id/txt" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="中国知网"
		android:gravity="center"></TextView>
</LinearLayout>