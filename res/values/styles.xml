<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
	<!-- 透明样式 -->
    <style name="Transparent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        </style>
     <style name="CustomWindowTitleBackground">
</style>


<style name="test" parent="android:Theme">
     <item name="android:windowTitleSize">50dp</item>
     <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
</style>
<style name="help_dot_style">
    <item name="android:layout_width">10dip</item>
    <item name="android:layout_height">10dip</item>
    <item name="android:background">@drawable/help_dot_normal</item>
    <item name="android:layout_marginLeft">1.5dip</item>
    <item name="android:layout_marginRight">1.5dip</item>
    </style>   
    <!-- 自定义对话框 -->
	<style name="CustomeDialog" parent="@android:Theme.Dialog">
		<item name="android:windowFrame">@null</item><!-- Dialog的windowFrame框为无 -->
		<item name="android:windowNoTitle">true</item><!-- 是否显示title -->
		<!-- <item name="android:windowBackground">@drawable/dialog_bg</item>背景 -->
		<item name="android:windowIsFloating">true</item><!-- 是否浮现在activity之上 -->
		<item name="android:windowContentOverlay">@null</item><!-- 对话框是否有遮盖 -->
		<item name="android:windowIsTranslucent">true</item><!-- 对话框是否透明 -->
		<item name="android:backgroundDimEnabled">true</item><!-- 背景是否模糊显示 -->
		<item name="android:backgroundDimAmount">0.6</item>
	</style> 
	 <style name="ImageloadingDialogStyle" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item><!--对话框是否有遮盖 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
	<!-- 指导界面 -->
	<style name="guide_dot_style">
		<item name="android:layout_width">10dip</item>
		<item name="android:layout_height">10dip</item>
		<!-- <item name="android:background">@drawable/guide_dot_normal</item> -->
		<item name="android:layout_marginLeft">1.5dip</item>
		<item name="android:layout_marginRight">1.5dip</item>
	</style>
</resources>
