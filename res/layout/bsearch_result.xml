<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#d3d3d3"
    >
    <LinearLayout 
       android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="20dip"
        android:background="#d3d3d3"
        android:orientation="vertical" >
         <ImageView 
           android:layout_width="60dip"
           android:layout_height="20dip"
           android:background="#aa0000" />
        <ImageView 
           android:layout_width="fill_parent"
           android:layout_height="6dip"
           android:background="#aa0000" />
    </LinearLayout>
    <RelativeLayout 
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="15dip"
    	android:layout_marginRight="15dip"
       android:background="@android:color/white"
       android:orientation="vertical"
       android:descendantFocusability="blocksDescendants" >
     <TextView
            android:id="@+id/book_title"
             android:layout_width="fill_parent"
           android:layout_height="wrap_content"
            android:textColor="#000000" 
            android:textSize="18sp" 
            android:layout_marginLeft="2dip"         
            android:layout_marginTop="2dip"
            />
      <TextView
            android:id="@+id/book_language"
             android:layout_width="fill_parent"
           android:layout_height="wrap_content"
            android:textColor="#cccccc"
            android:layout_marginLeft="2dip"
            android:layout_below="@id/book_title"
            android:layout_marginTop="2dip"/>  
            <TextView 
                android:id="@+id/book_storeNum"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:textColor="#000000"
            android:layout_marginLeft="2dip"
            android:layout_below="@id/book_language"
            android:layout_marginTop="2dip" />
            <TextView 
                android:id="@+id/book_outNum"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
               android:textColor="#000000"
            android:layout_marginLeft="2dip"
            android:layout_below="@id/book_storeNum"
            android:layout_marginTop="2dip"   />
            <!-- <Button 
                android:id="@+id/orderbook"
               android:layout_width="wrap_content"
               android:layout_height="20dip"
               android:text=" 预   约  "
               android:textColor="#ffffff"
               android:textSize="5pt"
               android:background="@drawable/news_detail_tbar"
               android:layout_alignParentRight="true"
               android:layout_marginRight="10dip" 
               android:layout_below="@id/book_storeNum"
               android:onClick="orderClick"
               android:layout_marginTop="2dip"/> -->
            </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="10dip"
        android:background="#d3d3d3"></LinearLayout>

    </LinearLayout>